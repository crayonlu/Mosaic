{
  "name": "mosaic-workspace",
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "description": "Mosaic - Desktop (Tauri) and Mobile (React Native) workspace",
  "scripts": {
    "desktop:dev": "pnpm --filter desktop dev",
    "desktop:build": "pnpm --filter desktop build",
    "desktop:tauri": "pnpm --filter desktop tauri",
    "mobile:start": "pnpm --filter mobile start",
    "mobile:android": "pnpm --filter mobile android",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:web": "pnpm --filter mobile web",
    "lint": "pnpm --filter desktop lint && pnpm --filter mobile lint",
    "lint:desktop": "pnpm --filter desktop lint",
    "lint:desktop:fix": "pnpm --filter desktop lint:fix",
    "lint:mobile": "pnpm --filter mobile lint",
    "lint:mobile:fix": "pnpm --filter mobile lint:fix",
    "format": "pnpm --filter desktop format && pnpm --filter mobile format",
    "format:desktop": "pnpm --filter desktop format",
    "format:desktop:check": "pnpm --filter desktop format:check",
    "format:mobile": "pnpm --filter mobile format",
    "format:mobile:check": "pnpm --filter mobile format:check",
    "check": "pnpm lint && pnpm format:desktop:check && pnpm format:mobile:check"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mosaic.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0"
  }
}
