# Server Configuration
PORT=8080

# Database Configuration
# Example: DATABASE_URL=postgres://user:password@localhost:5432/mosaic
DATABASE_URL=

# PostgreSQL (for docker-compose)
POSTGRES_PASSWORD=mosaic_password

# Authentication
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage Configuration
# Options: "local" or "r2"
STORAGE_TYPE=local

# Local Storage Path (when STORAGE_TYPE=local)
LOCAL_STORAGE_PATH=./storage

# Cloudflare R2 Configuration (when STORAGE_TYPE=r2)
# R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_ENDPOINT=
R2_BUCKET=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# Admin Account
# Default: admin / admin123 (change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
